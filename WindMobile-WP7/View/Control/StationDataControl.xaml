<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Ch.Epyx.WindMobile.WP7.View"
	mc:Ignorable="d"
	x:Class="Ch.Epyx.WindMobile.WP7.View.StationDataControl"
	d:DesignWidth="480" d:DesignHeight="617"
    Loaded="UserControl_Loaded"
    >
    <UserControl.Resources>
        <Storyboard x:Name="RotateTrendAnimation">
            <DoubleAnimation x:Name="RotateTrendAnimationAngle" Storyboard.TargetName="TrendRotateTransform" Storyboard.TargetProperty="Angle"
                             Duration="0:0:1" />
        </Storyboard>
    </UserControl.Resources>

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Grid x:Name="ContentGrid"
			RenderTransformOrigin="0.529,0.396">
			<Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
				<RowDefinition Height="0.05*"/>
				<RowDefinition Height="0.036*"/>
				<RowDefinition Height="0.097*"/>
				<RowDefinition Height="0.042*"/>
				<RowDefinition Height="60"/>
				<RowDefinition Height="0.066*"/>
				<RowDefinition Height="0.066*"/>
				<RowDefinition Height="0.086*"/>
				<RowDefinition Height="0.083*"/>
				<RowDefinition Height="0.088*"/>
				<RowDefinition Height="0.078*"/>
				<RowDefinition Height="0.083*"/>
				<RowDefinition Height="0.185*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.194*"/>
				<ColumnDefinition Width="0.183*"/>
				<ColumnDefinition Width="0.117*"/>
				<ColumnDefinition Width="0.325*"/>
				<ColumnDefinition Width="0.181*"/>
			</Grid.ColumnDefinitions>

            <TextBlock Text="{Binding TimeAgo}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Right" />

            <TextBlock Text="{Binding Path=Localizedresources.StationData_Altitud, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{StaticResource PhoneSubtleBrush}" Grid.Row="1" />
			<TextBlock Text="{Binding StationInfo.Altitude, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1"  Grid.Column="2" Foreground="{StaticResource PhoneSubtleBrush}" />

            <TextBlock Text="{Binding Path=Localizedresources.StationData_Wind, Source={StaticResource LocalizedStrings}, Mode=OneTime}" d:LayoutOverrides="Width, Height" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			<TextBlock Text="{Binding StationData.WindAverage, Mode=OneWay}" HorizontalAlignment="Right" FontSize="48" VerticalAlignment="Bottom" Grid.Row="3" Grid.Column="1"/>
            <TextBlock Grid.Column="2" HorizontalAlignment="Right" Grid.Row="3" Text="{Binding Path=Localizedresources.StationData_Kmh, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}" VerticalAlignment="Bottom"/>

            <TextBlock Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="{Binding Path=Localizedresources.StationData_WindMax, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}" />
			<TextBlock Text="{Binding StationData.WindMax, Mode=OneWay}" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="4" VerticalAlignment="Bottom" />
            <TextBlock Grid.Column="2" HorizontalAlignment="Right" Grid.Row="4" Text="{Binding Path=Localizedresources.StationData_Kmh, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Center" Foreground="{StaticResource PhoneSubtleBrush}"/>

            <TextBlock Text="{Binding Path=Localizedresources.StationData_WindTrend, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="ImageTrend" Grid.Row="5" Grid.Column="2"
                   Width="45" Height="36" Margin="5" Stretch="Uniform" RenderTransformOrigin="0.5,0.5"  >  <!--Source="../Images/arrow_green.png">-->
                <Image.RenderTransform>
                    <RotateTransform x:Name="TrendRotateTransform" Angle="0" />                        
                </Image.RenderTransform>
            </Image>

            <Path Grid.Column="3" Data="M237,0 L237,180" HorizontalAlignment="Left" Margin="1" Grid.RowSpan="6" Stretch="Fill" Stroke="{StaticResource PhoneForegroundBrush}" UseLayoutRounding="False" Width="1" StrokeThickness="2"/>
            
            <view:WindChartControl Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="6"
                                    ChartPoints="{Binding Path=StationData.DirectionChartPoints}" />
            
            <Path Grid.ColumnSpan="5" Data="M0,180 L480,180" Height="1" Grid.Row="6" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" StrokeThickness="2" Stroke="{StaticResource PhoneForegroundBrush}"/>


            <TextBlock Grid.Row="6" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_WindLastHour, Source={StaticResource LocalizedStrings}, Mode=OneTime}"/>
            <TextBlock Grid.Row="7" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_Minimum, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}" />
            <TextBlock Grid.Row="8" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_Average, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}"/>
            <TextBlock Grid.Row="9" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_Maximum, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}"/>
			<TextBlock Text="{Binding StationData.WindHistoryMin, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="7" FontSize="29.333"/>
            <TextBlock Text="{Binding StationData.WindHistoryAverage, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="8" FontSize="29.333"/>            
            <TextBlock Text="{Binding StationData.WindHistoryMax, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="9" FontSize="29.333"/>
            <TextBlock Grid.Column="4" HorizontalAlignment="Right" Grid.Row="7" Text="{Binding Path=Localizedresources.StationData_Kmh, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Center" Foreground="{StaticResource PhoneSubtleBrush}" d:LayoutOverrides="GridBox"/>
            <TextBlock Grid.Column="4" HorizontalAlignment="Right" Grid.Row="8" Text="{Binding Path=Localizedresources.StationData_Kmh, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Center" Foreground="{StaticResource PhoneSubtleBrush}" d:LayoutOverrides="GridBox"/>
            <TextBlock Grid.Column="4" HorizontalAlignment="Right" Grid.Row="9" Text="{Binding Path=Localizedresources.StationData_Kmh, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Center" Foreground="{StaticResource PhoneSubtleBrush}" d:LayoutOverrides="GridBox"/>
			<Path Grid.ColumnSpan="5" Data="M0,180 L480,180" Height="1" Grid.Row="10" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" StrokeThickness="2" Stroke="{StaticResource PhoneForegroundBrush}"/>


            <TextBlock Grid.Row="10" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_Air, Source={StaticResource LocalizedStrings}, Mode=OneTime}"/>
            <TextBlock Grid.Row="11" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_Air_Temperature, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}" Grid.ColumnSpan="3"/>
            <TextBlock Grid.Row="12" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Path=Localizedresources.StationData_Air_Humidity, Source={StaticResource LocalizedStrings}, Mode=OneTime}" Foreground="{StaticResource PhoneSubtleBrush}" Grid.ColumnSpan="3"/>
            <TextBlock Grid.Column="4" HorizontalAlignment="Right" Grid.Row="11" Text="{Binding Path=Localizedresources.StationData_Air_Degree, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Center" Foreground="{StaticResource PhoneSubtleBrush}" d:LayoutOverrides="GridBox"/>
            <TextBlock Grid.Column="4" HorizontalAlignment="Right" Grid.Row="12" Text="{Binding Path=Localizedresources.StationData_Air_Relative, Source={StaticResource LocalizedStrings}, Mode=OneTime}" VerticalAlignment="Center" Foreground="{StaticResource PhoneSubtleBrush}" d:LayoutOverrides="GridBox"/>
			<TextBlock Text="{Binding StationData.AirTemperature, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="11" FontSize="29.333"/>
			<TextBlock Text="{Binding StationData.AirHumidity, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="12" FontSize="29.333"/>
		</Grid>
	</Grid>
</UserControl>